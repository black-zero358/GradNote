# 服务设置
DEBUG=true
WORKERS=4
API_PORT=8000
API_HOST=0.0.0.0
UPLOAD_DIR=uploads

# 日志配置
LOG_LEVEL=debug  # debug, info, warning, error, critical
LOG_REQUEST_BODY=true  # 是否记录请求体内容
LOG_ENCODING=utf-8
